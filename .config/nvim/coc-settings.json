{
  "suggest.noselect": false,
  "suggest.enablePreview": true,
  "suggest.snippetPriority": 90,
  "suggest.minTriggerInputLength": 1,
  "suggest.snippetIndicator": "●",
  "suggest.autoTrigger": "always",

  "diagnostic.enable": true,
  "diagnostic.virtualText": true,
  "diagnostic.signOffset": 9999,
  "diagnostic.errorSign": "✘",
  "diagnostic.warningSign": "▲",
  "diagnostic.infoSign": "",
  "diagnostic.hintSign": "⚑",

  "coc.preferences.formatOnSave": true,

  "tsserver.enable": true,
  "tsserver.formatOnType": true,

  "volar.enable": true,
  "volar.takeOverMode": true,

  "python.analysis.typeCheckingMode": "basic",
  "python.analysis.autoImportCompletions": true,
  "python.formatting.provider": "black",

  "go.goplsPath": "gopls",
  "go.enable": true,
  "go.lintTool": "golangci-lint",

  "rust-analyzer.enable": true,
  "rust-analyzer.cargo.allFeatures": true,
  "rust-analyzer.checkOnSave.command": "clippy",

  "solargraph.useBundler": true,
  "solargraph.bundlerPath": "bundle",
  "solargraph.diagnostics": true,
  "solargraph.formatting": true,

  "intelephense.format.enable": true,
  "intelephense.diagnostics.enable": true,
  "intelephense.environment.phpVersion": "8.2",

  "laravel.languageServer.enable": true,

  "astro.enable": true,

  "kotlin.languageServer.path": "kotlin-language-server",
  "kotlin.trace.server": "off",

  "dart.analysisServer.additionalArgs": ["--lsp"],
  "dart.enableAdditionalAnalyzerChecks": true,

  "java.jdt.ls.vmargs": "-Xms512m -Xmx4G -javaagent:~/.m2/repository/org/projectlombok/lombok/1.18.38/lombok-1.18.38.jar -XX:+UseG1GC -XX:+UseStringDeduplication",
  "java.import.gradle.enabled": false,
  "java.import.maven.enabled": true,
  "java.configuration.updateBuildConfiguration": "automatic",
  "java.compile.nullAnalysis.mode": "automatic",

  "prettier.enable": true,
  "prettier.requireConfig": false,

  "coc.preferences.currentFunctionSymbolAutoUpdate": true,
  "signature.enable": true,
  "codeLens.enable": true,
  "snippets.ultisnips.pythonPrompt": false,

  "java.format.settings.url": "~/.config/nvim/eclipse-formatter.xml",
  "java.format.settings.profile": "CustomEclipseStyle",
  "java.format.enabled": true,

  "diagnostic-languageserver.linters": {
    "hadolint": {
      "command": "hadolint",
      "debounce": 100,
      "args": ["--format", "json", "-"],
      "sourceName": "hadolint",
      "parseJson": {
        "errorsRoot": "",
        "line": "line",
        "column": "column",
        "endLine": "endLine",
        "endColumn": "endColumn",
        "message": "${message} [${code}]",
        "security": "level"
      },
      "securities": {
        "error": "error",
        "warning": "warning",
        "info": "info",
        "style": "hint"
      }
    }
  },
  "diagnostic-languageserver.filetypes": {
    "dockerfile": ["hadolint"]
  }
}
